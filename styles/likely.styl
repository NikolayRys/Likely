/* Size options */

.likely {
  line-height: 20px;
  margin: 0 -5px -10px;
  .likely__widget {
    font-size: 14px;
    border-radius: 3px;
    height: 22px;
    margin: 0 5px 10px;
  }
  .likely__icon {
    width: 22px; height: 22px;
  }
  .likely__button {
    padding: 1px 4px 1px 0;
  }
  .likely__counter {
    padding: 1px 4px;
  }
  svg {
    left: 3px;
    top: 3px;
    width: 16px;
    height: 16px;
  }
}

.likely-big {
